<!DOCTYPE html>
<html>
  <head>
    <title>Badminton League</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" %>
    <%= javascript_importmap_tags %>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">Badminton League</a>
        <ul class="navbar-nav flex-row">
          <li class="nav-item me-3"><%= link_to "Players", players_path, class: "nav-link text-light" %></li>
          <li class="nav-item"><%= link_to "Matches", matches_path, class: "nav-link text-light" %></li>
        </ul>
      </div>
    </nav>

    <div class="container mt-4">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
